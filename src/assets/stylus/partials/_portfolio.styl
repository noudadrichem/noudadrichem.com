 #work
  padding:0 0 40px
  display:flex
  justify-content:left
  flex-direction:row
  flex-wrap:wrap
  flex-flow:row wrap
  list-style:none
  align-content:flex-end
  .work.item
      margin:2.5%
      height:auto
      flex-basis:28%
      background:lightblue
      position:relative
      overflow:hidden
      box-shadow:0 12px 20px rgba(0,0,0,.4)
      transition:500ms
      img
        height:100% !important
      .overlay
        position:absolute
        width:100%
        height:100%
        top:0
        left:0
        opacity:0
        transition:opacity 500ms
        color:#fff
        background:transparentBlue
        text-align:center
        .content
          position:absolute
          top:50%
          left:50%
          transform:translate(-50%, -50%)
          width:90%
          h1
            text-transform:uppercase
            font-size:1.3em
          h3
            opacity:0.75
            font-size:0.9em
            a
              color:white
              border-bottom:1px solid white
          h5
            font-size:.8em
            text-transform:uppercase
            font-weight:400
      &:hover
        transform:translateY(-5px)
        box-shadow:0 12px 20px rgba(0,0,0,.6)
        .overlay
          opacity:1
